<h2 id="title">ember-time-field</h2>

<p>
  <TimeField @value={{this.time}} @hour12={{this.hour12}} @on-change={{ action "timeChanged" }} >
  </TimeField>
</p>

<p>
  Value: {{this.hours}}:{{this.minutes}}
</p>

<p>
  <button type="button" onclick={{action "toggleHour"}}>Toggle 12/24 hour</button>
</p>

<h3>Actions</h3>

<p>
  <code>on-change</code> is called when time changes
</p>
